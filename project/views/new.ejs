<%- include ("./partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header">New Tweet</div>
	<form class="ui form" action="/posts" method="POST">
		<div class="field">
			<label>Post Title</label>
			<input type="text" name="post[title]" placeholder="title">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="post[image]" placeholder="image">
		</div>
		<div class="field">
			<label>Tweet Content</label>
			<textarea name="post[body]" required></textarea>
		</div>
		<input class="ui big primary button" type="submit">
	</form>
</div>

<%- include ("./partials/footer") %>