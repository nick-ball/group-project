<%- include ("./partials/header") %>

<div class="ui main text container">
	<div class="ui huge header">Home</div>
	<div class="ui top attached segment">
		<div class="ui divided items">

			<% posts.forEach(function(post) { %>
				<div class="item">
					<div class="small image">
						<img src="<%= post.image %>" />
					</div> <!-- image -->
					<div class="content">
						<a class="header" href="/posts/<%= post._id %>">
							<%= post.title %>
						</a>
						<div class="meta">
							<span>
								<%= post.created.toDateString() %>
							</span>
						</div> <!-- meta -->
						<div class="description">
    <p><%- post.body.replace(/<\/?[^>]+(>|$)/g, "").substring(0, 100) %><strong>...</strong></p>
</div> <!-- description -->
						<div class="extra">
							<a class="ui floated basic black button" href="/posts/<%= post._id %>">
								Read more!
								<i class="right chevron icon"></i>
							</a>
						</div> <!-- extra -->
					</div> <!-- content -->
				</div> <!-- item -->
			<% }); %>

		</div> <!-- divided items -->
	</div> <!-- top attached segment -->
</div> <!-- main text container -->

<%- include ("./partials/footer") %>